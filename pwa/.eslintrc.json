{
  "extends": [
    "prettier",
    "plugin:jsdoc/recommended",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "prettier",
    "jsdoc",
    "react"
  ],
  "env": {
    "amd": true,
    "jest": true,
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    "prettier/prettier": [
      "error"
    ],
    "valid-jsdoc": 2,
    "valid-typeof": [
      2,
      {
        "requireStringLiterals": false
      }
    ],
    "jsdoc/newline-after-description": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
