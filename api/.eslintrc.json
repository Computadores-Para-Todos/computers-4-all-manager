{
  "extends": [
    "prettier",
    "plugin:jsdoc/recommended"
  ],
  "plugins": [
    "prettier",
    "jsdoc"
  ],
  "env": {
    "amd": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": false,
        "requireParamDescription": false,
        "requireReturnDescription": false
      }
    ],
    "valid-typeof": [
      "error",
      {
        "requireStringLiterals": false
      }
    ],
    "jsdoc/newline-after-description": 0
  }
}